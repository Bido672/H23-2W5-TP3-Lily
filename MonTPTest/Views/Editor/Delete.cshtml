@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model MonTPTest.Models.CarteGraphique

@section title {
    <title>Supprimer un enfant</title>
}

<h1>View</h1>

<h3>Voulez vous vraiment supprimer cet enfant?</h3>
<div>
    <h4>Carte Graphique</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdParent)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdParent)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImageCarte)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImageCarte)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EstVedette)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstVedette)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="text" name="id" value="@Model.Id" hidden/>
        <input type="submit" value="Supprimer" class="btn btn-danger" />
    </form>
</div>
