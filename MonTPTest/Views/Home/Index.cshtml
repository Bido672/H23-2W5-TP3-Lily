@Model List<MonTPTest.Models.MarqueDeCarte>;
@using MonTPTest.Models;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
    @section title {
        <title>Accueil</title>
    }
    <body id="accueil">
        <main class="container" custom-border rounded-corners fill-background>
            <div class="row">
                <div class="col-12">
                    <h1>Marque de carte graphiques</h1>
                </div>
            </div>
            <div class="row justify-content-center align-items-stretch marques">
                @if (Model != null)
                {
                    @foreach (MarqueDeCarte Marque in Model)
                    {
                        <a href="./Recherche" class="col-sm-11 col-md-3 marque" custom-border rounded-corners fill-background>
                            <div class="row marque-nom">
                                <div class="col">
                                    <h2>@(Marque.Nom)</h2>
                                </div>
                            </div>
                            <div class="row marque-image justify-content-center">
                                <img custom-border rounded-corners class="img-fluid col" src="@(Marque.LienImageLogo)" alt="logo de la marque @(Marque.Nom)" />
                            </div>
                            <div class="row marque-info justify-content-around justify-content-md-start">
                                <div class="col-auto">
                                    <ol class="noMarker">
                                        @foreach (var Statistique in Marque.Statistiques)
                                        {
                                            <li>@(Statistique.ToStringForView())</li>
                                        }
                                    </ol>
                                </div>
                            </div>
                            <div class="row marque-desc">
                                <div class="col">
                                    <p>
                                        Voici un paragraphe informationel sur la compagnie @(Marque.Nom)
                                        <br />
                                        @(Marque.Description)
                                    </p>
                                </div>
                            </div>
                        </a>
                    }

                }
                else{
                    <p>Erreur 404... Aucune marque trouvée...</p>
                }
        </div>
    </main>
</body>
